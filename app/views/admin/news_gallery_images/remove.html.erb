<h1><%= t('news.galleries.items.title.remove') %></h1>

<p><%= t('news.galleries.items.messages.remove') %></p>

<table class="index" cellpadding="0" cellspacing="0" border="0">
  <tbody>
    <tr class="node level-1">
      <td class="news">
        <%= @news_gallery_image.description %>
      </td>
    </tr>
  </tbody>
</table>

<% form_for [:admin, @gallery_item], :html => { :method => 'delete' } do %>
  <p class="buttons">
    <input class="button" type="submit" value="<%= t('news.galleries.items.buttons.remove') %>"/>
    <%= t('or') %>
    <%= link_to t('news_button_cancel'), admin_news_gallery_images_url %>
  </p>
<%- end -%>
