<%= render :partial => "#{File.dirname(__FILE__)}/../menu.html.erb" %>
<h1><%= t('news_tags_index_title') %></h1>
<% if @news_tags.blank? %>
  <p><%= t('news_tags_list_empty')%></p>
<% else %>
<u1>
    <table  class="index" >
     <% @news_tags.each do |tag| %>
     <tr  class="node level-0">
       <td class="page"><%= link_to  tag.name, { :action => 'edit', :id => tag.id } %></td>
       <td class="remove"><%= link_to image('remove', :alt =>  t('news_link_remove_tag_alt')), remove_admin_news_tag_url(:id => tag.id) %></td>
     </tr>
    <%end%>
    </table>
</u1>
<div id="pagination" style='margin: 10px'>
<%= will_paginate @news_tags %>
</div>
<%- end %>

<%#= ActionController::Base.instance_methods.sort.join("\n") %>

<%= link_to t('news_tags_add'), { :action => 'new' } %>