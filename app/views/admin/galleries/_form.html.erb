<% form_for([:admin, @gallery]) do |form| %>
  <div class="form_area">
    <p class='lable'>
      <%= form.label :name, t('news_gallery_form_label_name') %>
      <%= form.text_field :name, :class => 'textbox', :maxlength => 255, :style => "width: 100%" %>
    </p>
    <p class="buttons">
      <%= save_model_button @gallery %>
      <%= save_model_and_continue_editing_button @gallery %>
      <%= t('or') %>
      <%= link_to t('cancel'), admin_galleries_url %>
    </p>
  </div>
<% end %>
