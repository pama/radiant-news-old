<div class="outset">
  <table class="index" id="site_map" summary="list of news tags">
    <thead>
      <tr>
        <th class="layout"><%= t('news.documents.list.title') %></th>
        <th class="modify"><%= t('modify') %></th>
      </tr>
    </thead>
    <tbody>
    <% if @news_documents.any? -%>
      <% @news_documents.each do |item| -%>
      <tr class="node level_1">
        <td class="layout">
          <%= link_to item.title, edit_admin_news_document_url(item) %>
        </td>
        <td class="remove">
          <%= link_to t('remove'), remove_admin_news_document_url(item), :class => "action"  %>
        </td>
      </tr>
      <% end -%>
    <% else -%>
      <tr class="node level_1">
        <td>
          <%= t('news.documents.list.empty') %>
        </td>
        <td class="remove"></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  
  <div id="pagination" style='margin: 10px'>
    <%= will_paginate @news_documents %>
  </div>

  <div id="actions">
    <ul>
      <li>
        <%= link_to image('plus') + " " + t('news.documents.buttons.add'), new_admin_news_document_url %>
      </li>
    </ul>
  </div>
</div>
