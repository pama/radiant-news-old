<h1><%= t('news_gallery_item_remove_title') %></h1>

<p><%= t('news_gallery_item_remove_message') %></p>

<table class="index" cellpadding="0" cellspacing="0" border="0">
  <tbody>
    <tr class="node level-1">
      <td class="news">
        <%= @gallery_item.description %>
      </td>
    </tr>
  </tbody>
</table>

<% form_for [:admin, @gallery_item], :html => { :method => 'delete' } do %>
  <p class="buttons">
    <input class="button" type="submit" value="<%= t('news_gallery_item_button_remove') %>"/>
    <%= t('or') %>
    <%= link_to t('news_button_cancel'), admin_gallery_items_url %>
  </p>
<%- end -%>
